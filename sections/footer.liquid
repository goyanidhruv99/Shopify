<footer class="site-footer">
    <div class="footer-container">
        <div class="footer-row flex">
            {% if section.settings.footer_logo %}
              <div class="footer-col footer-logo-col">
                  <a href="#">
                      <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ section.settings.footer_logo.alt }}">
                  </a>
              </div>
            {% endif %}
            <div class="footer-col footer-contact-col">
                {% if section.settings.contact_number != blank %}
                  <div class="footer-contact-link">
                      <span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="17" viewBox="0 0 16 17"
                              fill="none">
                              <path
                                  d="M12.0319 9.51839L12.0321 9.51865L15.3996 12.8868L15.3999 12.8872C15.464 12.9511 15.5 13.0379 15.5 13.1285C15.5 13.219 15.464 13.3058 15.3999 13.3698L15.3996 13.3701L13.1165 15.6531C12.8908 15.8788 12.5974 16 12.2872 16H12.2679C11.1091 15.9799 7.11256 15.6686 3.97207 12.5283C0.828077 9.38439 0.518785 5.38261 0.500123 4.23016C0.495514 3.91881 0.621348 3.60913 0.847061 3.38343L3.1302 1.10039L3.1305 1.10009C3.19447 1.03601 3.2813 1 3.37185 1C3.4624 1 3.54924 1.03601 3.6132 1.10009L3.61351 1.10039L6.98097 4.46771L6.98127 4.46801C7.04534 4.53197 7.08135 4.61879 7.08135 4.70932C7.08135 4.79985 7.04534 4.88667 6.98127 4.95063L6.98097 4.95094L5.63903 6.29281L5.42835 6.50349L5.51337 6.78904C5.70135 7.42048 6.15029 8.68805 6.98097 9.51869C7.81164 10.3493 9.07925 10.7982 9.71072 10.9862L9.99625 11.0712L10.2069 10.8606L11.5489 9.51869L11.5492 9.51839C11.6131 9.45432 11.7 9.41831 11.7905 9.41831C11.8811 9.41831 11.9679 9.45432 12.0319 9.51839Z"
                                  stroke="black" />
                          </svg>
                      </span>
                      <a href="tel:{{ section.settings.contact_number }}" target="_blank">{{ section.settings.contact_number }}</a>
                  </div>
                {% endif %}      
                {% if section.settings.email_id != blank %}
                  <div class="footer-contact-link">
                      <span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="21" height="14" viewBox="0 0 21 14"
                              fill="none">
                              <g id="icon mail">
                                  <path id="Rectangle" d="M0.5 1H19.8125V13H0.5V1Z" stroke="black" />
                                  <path id="Path 6" d="M0.8125 1.3125L10.5625 9.4375L19.5 1.3125" stroke="black" />
                              </g>
                          </svg>
                      </span>
                      <a href="mailto:{{ section.settings.email_id }}" target="_blank">{{ section.settings.email_id }}</a>
                  </div>
                {% endif %}
                {% if section.settings.address != blank %}
                  <div class="footer-contact-link">
                      <span>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="19" viewBox="0 0 16 19"
                              fill="none">
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                  d="M8.2 18.5C8.2 18.5 1 13.5909 1 7.86364C1 3.79681 4.22355 0.5 8.2 0.5C12.1765 0.5 15.4 3.79681 15.4 7.86364C15.4 13.5909 8.2 18.5 8.2 18.5Z"
                                  stroke="black" stroke-linecap="round" stroke-linejoin="round" />
                              <circle cx="8.20005" cy="7.70078" r="2.4" stroke="black" stroke-linecap="round"
                                  stroke-linejoin="round" />
                          </svg>
                      </span>
                      <p>{{ section.settings.address }}</p>
                  </div>
                {% endif %}
            </div>
            <div class="footer-col footer-links-col">
                <ul>
                    {% for link in linklists[section.settings.choose_menu].links  %}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="footer-col footer-newsletter-col">
                {% if section.settings.newsletter_heading != blank %}
                  <div class="news-title">{{ section.settings.newsletter_heading }}</div>
                {% endif %}
                {% if section.settings.newsletter_description != blank %}
                  <p>{{ section.settings.newsletter_description }}</p>
                {% endif %}
                {% form 'customer', class:'newsletter-form' %}
                  <div class="input-wrp">
                    <input type="email" name="contact[email]" class="form-control" placeholder="Enter your email address" />
                    <button class="news-btn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="9" height="15" viewBox="0 0 9 15"
                            fill="none">
                            <path id="Path 7" d="M1 0.5L8 7.5L1 14.5" stroke="white" />
                        </svg>
                    </button>
                  </div>
                  {% if form.posted_successfully? %}
                    <p>Thanks for contacting us! We will get in touch with you shortly.</p>
                  {% endif %}
                  <ul>
                    {% for error in form.errors %}
                      <li>
                        {% if error == 'form' %}
                          {{ form.errors.messages[error] }}
                        {% else %}
                          {{ form.errors.translated_fields[error] }} - {{ form.errors.messages[error] }}
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endform %}
            </div>
        </div>
        {% if section.settings.copyright %}
          <div class="footer-bottom">
              <p>{{ section.settings.copyright }}</p>
          </div>
        {% endif %}
    </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo"
      },
      {
        "type": "link_list",
        "id": "choose_menu",
        "label": "Choose Menu"
      },
      {
        "type": "text",
        "id": "contact_number",
        "label": "Contact Number"
      },
      {
        "type": "text",
        "id": "email_id",
        "label": "Email Id"
      },
      {
        "type": "text",
        "id": "address",
        "label": "Address"
      },
      {
        "type": "header",
        "content": "Newsletter"
      },
      {
        "type": "text",
        "id": "newsletter_heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "newsletter_description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "copyright",
        "label": "Copyright"
      }
    ]
  }
{% endschema %}

