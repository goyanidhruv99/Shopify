{% render 'collection-filter' %}

<section sn="roasted-section" class="bs-second-section-wrapper home-second">
    <div class="container-lg">
        <div class="bs-section-title text-left">
          {% if section.settings.heading != blank %}
            <h2 class="h1">{{ section.settings.heading }}</h2>
          {% endif %}
        </div>
        <div class="bs-second-section-grid">
            <div class="bs-second-product-row flex">
              {%- paginate collection.products by 6 -%}
                {% for product in collection.products %}
                  {% render "product-item", product:product %}
                {% endfor %}
                <div class="paginate-row">
                  {{ paginate | default_pagination: next: 'next', previous: 'previous' }}
                </div>
              {%- endpaginate -%}
            </div>
        </div>
    </div>
</section> 

{% schema %}
  {
    "name": "Collection Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading"
      },
      {
        "type": "collection",
        "id": "choose_collection",
        "label": "Choose Collection"
      }
    ]
  }
{% endschema %}

