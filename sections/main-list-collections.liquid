<section sn="roasted-section" class="bs-second-section-wrapper home-second">
    <div class="container-lg">
        <div class="bs-section-title text-left">
          {% if section.settings.heading != blank %}
            <h2 class="h1">{{ section.settings.heading }}</h2>
          {% endif %}
        </div>
        <div class="bs-second-section-grid">
            <div class="bs-second-product-row flex">
              {% assign hidethisdiv = false %}
              {% for collection in collections %}
                {% render "product-item", product:collection, hidethisdiv:hidethisdiv %}
              {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Section name",
    "settings": []
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
