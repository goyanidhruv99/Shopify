<div class="contact_page">
    <div class="container-lg">
        <div class="login-wrapper">
            <h1 class="h1">{{ page.title }}</h1>
            <div class="contact-form">
              {% form 'contact' %}
                {{ form.errors | default_errors }}
                    <input type="hidden" name="form_type" value="contact" />
                    <input type="hidden" name="utf8" value="âœ“" />
                    <div class="form-group half">
                        <label for="ContactForm-name">Name</label>
                        <input type="text" name="contact[Name]" class="form-control" id="ContactForm-name" placeholder="Name"/>
                    </div>
                    <div class="form-group half">
                        <label for="ContactForm-email">Email <span aria-hidden="true">*</span></label>
                        <input class="form-control" placeholder="Email" type="email" id="ContactForm-email"
                            name="contact[email]" autocorrect="off" autocapitalize="off" value="" aria-required="true">
                    </div>
                    <div class="form-group">
                        <label for="ContactForm-phone">Phone Number</label>
                        <input type="tel" class="form-control" placeholder="Phone Number" id="ContactForm-phone"
                            name="contact[phone]" pattern="[0-9\-]*" value="">
                    </div>
                    <div class="form-group">
                        <label for="ContactForm-message">Message</label>
                        <textarea rows="10" class="form-control" placeholder="Message" id="ContactForm-message"
                            name="contact[Message]"></textarea>
                    </div>
                    <div class="button-group mt-10">
                        <button class="add-to-cart-btn" type="submit">Send</button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</div>